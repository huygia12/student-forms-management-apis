{
    "name": "student-forms-management-apis",
    "version": "1.0.0",
    "description": "Apis for student forms management mobile application",
    "main": "src/index.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/huygia12/students-forms-management-apis"
    },
    "scripts": {
        "prepare": "husky install",
        "build": "rimraf ./dist && tsc",
        "start": "node dist/index.js",
        "dev": "nodemon",
        "lint": "eslint ./src --config eslint.config.mjs",
        "prettier": "prettier --write .",
        "db-pull": "prisma db pull --schema src/prisma/schema.prisma",
        "db-generate": "prisma generate --schema ./src/prisma/schema.prisma",
        "db-validate": "prisma validate --schema ./src/prisma/schema.prisma",
        "db-format": "prisma format --schema ./src/prisma/schema.prisma"
    },
    "keywords": [
        "student-form-management",
        "express"
    ],
    "author": "huygia12",
    "license": "MIT",
    "dependencies": {
        "@prisma/client": "^5.17.0",
        "@types/nodemailer": "^6.4.17",
        "axios": "^1.7.4",
        "bcrypt": "^5.1.1",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "crypto-js": "^4.2.0",
        "date-fns": "^4.1.0",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-async-errors": "^3.1.1",
        "helmet": "^7.1.0",
        "http-status-codes": "^2.3.0",
        "jimp": "^1.6.0",
        "jsonwebtoken": "^9.0.2",
        "module-alias": "^2.2.3",
        "moment": "^2.30.1",
        "morgan": "^1.10.0",
        "ms": "^2.1.3",
        "node-tesseract-ocr": "^2.2.1",
        "nodemailer": "^6.9.16",
        "prisma": "^5.17.0",
        "prompt": "^1.3.0",
        "tesseract.js": "^5.1.1",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.5.0",
        "@commitlint/config-conventional": "^19.5.0",
        "@types/bcrypt": "^5.0.2",
        "@types/compression": "^1.7.5",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/crypto-js": "^4.2.2",
        "@types/express": "^4.17.21",
        "@types/jimp": "^0.2.1",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/module-alias": "^2.0.4",
        "@types/morgan": "^1.9.9",
        "@types/ms": "^0.7.34",
        "@types/node": "^22.1.0",
        "@types/prompts": "^2.4.9",
        "@typescript-eslint/eslint-plugin": "^8.0.1",
        "@typescript-eslint/parser": "^8.0.1",
        "eslint": "^9.8.0",
        "eslint-config-prettier": "^9.1.0",
        "husky": "^9.1.4",
        "lint-staged": "^15.2.8",
        "nodemon": "^3.1.4",
        "prettier": "^3.3.3",
        "rimraf": "^5.0.10",
        "ts-node": "^10.9.2",
        "ts-proto": "^1.181.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.5.4"
    },
    "lint-staged": {
        "*.{css,html,js,json,md,yml,yaml}": "prettier --write",
        "*.{ts,tsx}": [
            "eslint",
            "prettier --write"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
